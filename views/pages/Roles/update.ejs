<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../partials/head'); %>
</head>

<body class="container">
    <header>
        <%- include('../../partials/header'); %>
    </header>
    <main>
        <h3>Update Role</h3>
        <% if( msg.length!=0) { %>
            <div class="alert alert-danger " role="alert">
                <%= msg %>
            </div>
            <% } %>
                <%- include('../../partials/loader'); %>
                    <form action="/roles/update" method="post">
                        <input class="d-none" type="text" id="_id" name="_id" value=<%=data._id %> >
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" name="name" placeholder="Enter Name"
                                value=<%=data.name %>>
                        </div>
                        <div class="form-group">
                            <label for="description">Description</label>
                            <input type="text" class="form-control" name="description" placeholder="Enter Description"
                                value=<%=data.description %>>
                        </div>
                        <div class="form-group p-2">
                            <table class="table table-bordered">
                                <tr>
                                    <th>Resource</th>
                                    <th>Create</th>
                                    <th>Read</th>
                                    <th>Update</th>
                                    <th>Delete</th>
                                </tr>
                                <tr>
                                    <td>Medicine</td>
                                    <td><input type="checkbox" <% if (data.chkMedicineCreate) { %>
                                        checked
                                        <% } %> id="chkMedicineCreate" name="chkMedicineCreate"
                                            value="MedicineCreate">
                                    </td>
                                    <td><input type="checkbox" <% if (data.chkMedicineRead) { %>
                                        checked
                                        <% } %> id="chkMedicineRead" name="chkMedicineRead"
                                            value="MedicineRead">
                                    </td>
                                    <td><input type="checkbox" <% if (data.chkmedicineUpdate) { %>
                                        checked
                                        <% } %> id="chkMedicineUpdate" name="chkmedicineUpdate"
                                            value="MedicineUpdate">
                                    </td>
                                    <td><input type="checkbox" <% if (data.chkMedicineDelete) { %>
                                        checked
                                        <% } %> id="chkMedicineDelete" name="chkMedicineDelete"
                                            value="MedicineDelete">
                                    </td>
                                </tr>
                                <tr>
                                    <td>Visit</td>
                                    <td><input type="checkbox" <% if (data.chkVisitCreate) { %>
                                        checked
                                        <% } %> id="chkVisitCreate" name="chkVisitCreate"
                                            value="VisitCreate">
                                    </td>
                                    <td><input type="checkbox" <% if (data.chkVisitRead) { %>
                                        checked
                                        <% } %> id="chkVisitRead" name="chkVisitRead" value="VisitRead">
                                    </td>
                                    <td><input type="checkbox" <% if (data.chkVisitUpdate) { %>
                                        checked
                                        <% } %>  id="chkVisitUpdate" name="chkVisitUpdate"
                                            value="VisitUpdate"></td>
                                    <td><input type="checkbox" <% if (data.chkVisitDelete) { %>
                                        checked
                                        <% } %> id="chkVisitDelete" name="chkVisitDelete"
                                            value="VisitDelete"></td>
                                </tr>
                            </table>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a type="cancel" class="btn btn-primary" href="/roles">Cancel</a>
                    </form>
    </main>
    <footer>
        <%- include('../../partials/footer'); %>
    </footer>
</body>

</html>