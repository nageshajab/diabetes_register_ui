<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head'); %>
</head>

<body class="container">
  <header>
    <%- include('../partials/header'); %>
  </header>
  <main>
    <% if( msg.length!=0) { %>
      <div class="alert alert-danger " role="alert">
        <%= msg %>
      </div>
      <% } %>
        <%- include('../partials/loader'); %>
          <!-- Button trigger modal -->
          <a href="/diabetic/insert" class="btn btn-primary">
            Add New
          </a>

          <table class="table">
            <tr>
              <th>Date</th>
              <th>bloodpressurepre</th>
              <th>bloodpressurepost</th>
              <th>weight</th>
              <th>bslf</th>
              <th>bslpp</th>
              <th>diagnosis</th>
              <th></th>
            </tr>
            <% if (typeof data !='undefined' ) { %>
              <% for(var i=0;i < data.length;i++) { %>
                <tr id="tr<%= data[i]._id %>">
                  <td>
                    <%= data[i].date.substring(0,10) %>
                  </td>
                  <td>
                    <%= data[i].bloodpressurepre %>
                  </td>
                  <td>
                    <%= data[i].bloodpressurepost %>
                  </td>
                  <td>
                    <%= data[i].weight %>
                  </td>
                  <td>
                    <%= data[i].bslf %>
                  </td>
                  <td>
                    <%= data[i].bslpp %>
                  </td>
                  <td>
                    <%= data[i].diagnosis %>
                  </td>
                  <td>
                    <button type="button" id='<%= data[i]._id %>'
                      onclick="deleteme('<%= data[i]._id %>')">Delete</button>
                  </td>
                </tr>
                <% } %>
                  <% } %>
          </table>
  </main>
  <footer>
    <script src="/scripts/index.js"></script>
    <script src="/scripts/delete.js"></script>
    <%- include('../partials/footer'); %>
  </footer>

</body>

</html>