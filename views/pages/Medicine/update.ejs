<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../partials/head'); %>
</head>

<body class="container">
    <header>
        <%- include('../../partials/header'); %>
    </header>
    <main>
        <h3>Update Medicine</h3>
        <% if( msg.length!=0) { %>
            <div class="alert alert-danger " role="alert">
                <%= msg %>
            </div>
            <% } %>
                <%- include('../../partials/loader'); %>
                    <form action="/medicine/update" method="post">
                        <input class="d-none" type="text" id="_id" name="_id" value=<%= data._id %> >
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" name="name" placeholder="Enter Name" value=<%= data.name %>>
                        </div>
                        <div class="form-group">
                            <label for="content">Content</label>
                            <input type="text" class="form-control" name="content" placeholder="Enter content"  value=<%= data.content %>>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a type="cancel" class="btn btn-primary" href="/medicine">Cancel</a>
                    </form>
    </main>
    <footer>
        <%- include('../../partials/footer'); %>
    </footer>
</body>

</html>