<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../../partials/head'); %>
</head>

<body class="container">
  <header>
    <%- include('../../partials/header'); %>
  </header>
  <main>
    <% if( msg.length!=0) { %>
      <div class="alert alert-danger " role="alert">
        <%= msg %>
      </div>
      <% } %>
        <%- include('../../partials/loader'); %>
          <!-- Button trigger modal -->
          <div class="p-2">
          <a  href="/medicine/insert" class="btn btn-primary">
            Add New
          </a>
        </div>
          <table class="table">
            <tr>
              <th>Name</th>
              <th>Content</th>
              <th></th>
            </tr>
            <% if (typeof data !='undefined' ) { %>
              <% for(var i=0;i < data.length;i++) { %>
                <tr id="tr<%= data[i]._id %>">
                  <td>
                    <%= data[i].name %>
                  </td>
                  <td>
                    <%= data[i].content %>
                  </td>
                  <td>
                    <a class="btn btn-primary pr-2" href="/medicine/update/<%= data[i]._id %>">Update</a>
                    <button class="btn btn-primary" type="button" id='<%= data[i]._id %>'
                      onclick="deleteme('<%= data[i]._id %>','localhost:5001/medicine/delete')">Delete</button>
                  </td>
                </tr>
                <% } %>
                  <% } %>
          </table>
  </main>
  <footer>
    <script src="/scripts/index.js"></script>
    <script src="/scripts/delete.js"></script>
    <%- include('../../partials/footer'); %>
  </footer>

</body>

</html>