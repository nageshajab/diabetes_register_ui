<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../partials/head'); %>
        <link href="/styles/jquery-ui.min.1.12.1.css" rel="stylesheet">
        <script src="/scripts/jquery-ui.min.1.12.1.js"></script>
</head>

<body class="container">
    <header>
        <%- include('../../partials/header'); %>
    </header>
    <main>
        <h3>Updating Doctor Visit Information</h3>
        <input class="d-none" type="text" id="apiurl" value=<%=apiurl %>>
        <% if( msg.length!=0) { %>
            <div class="alert alert-danger " role="alert">
                <%= msg %>
            </div>
            <% } %>
                <%- include('../../partials/loader'); %>
                    <form id="submitform" action="/visit/update" method="post">
                        <div class="form-group p-2 d-none">
                            <label class="pb-2" for="_id">Id</label>
                            <input type="text" value=<%=data._id %> class="form-control" name="_id"
                            >
                        </div>
                        <div class="form-group p-2">
                            <label class="pb-2" for="date">Date</label>
                            <input type="datetime-local" value=<%=data.date %> class="form-control" name="date"
                            placeholder="Select Date">
                        </div>
                        <div class="form-group p-2">
                            <label class="pb-2" for="bloodpressurepre">Blood Pressure Pre</label>
                            <input type="number" value=<%=data.bloodpressurepre %> class="form-control"
                            name="bloodpressurepre"
                            placeholder="bloodpressurepre">
                        </div>
                        <div class="form-group p-2">
                            <label class="pb-2" for="bloodpressurepost">Blood Pressure Post</label>
                            <input type="number" value=<%=data.bloodpressurepost %> class="form-control"
                            name="bloodpressurepost"
                            placeholder="bloodpressurepost">
                        </div>
                        <div class="form-group p-2">
                            <label class="pb-2" for="weight">Weight</label>
                            <input type="number" step=".01" value=<%=data.weight %> class="form-control" name="weight"
                            placeholder="weight">
                        </div>
                        <div class="form-group p-2">
                            <label class="pb-2" for="bslf">Bslf</label>
                            <input type="number" value=<%=data.bslf %> class="form-control" name="bslf"
                            placeholder="bslf">
                        </div>
                        <div class="form-group p-2">
                            <label class="pb-2" for="bslpp">Bslpp</label>
                            <input type="number" value=<%=data.bslpp %> class="form-control" name="bslpp"
                            placeholder="bslpp">
                        </div>
                        <div class="form-group p-2">
                            <label class="pb-2" for="diagnosis">Diagnosis</label>
                            <textarea class="form-control" name="diagnosis" rows="3"><%= data.diagnosis %> </textarea>
                        </div>
                        <div class="form-group p-2">
                            <div class="ui-widget">
                                <label for="medicine">Medicines : </label>
                                <input onfocus="searchMedicine()" id="medicine">
                            </div>
                            <ul id="medicinelist">
                            </ul>
                            <input class="d-none" value=<%=data.medicines %> name="medicines" class="" type="text"
                            id="selectedMedicines">
                        </div>
                        <div class="p-2">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <a type="cancel" class="btn btn-primary" href="/">Cancel</a>
                        </div>

                    </form>
    </main>
    <footer>
        <%- include('../../partials/footer'); %>
    </footer>
    <script src="/scripts/visit/loadmedicinesInUpdate.js"></script>
    <script src="/scripts/common/getData.js"></script>
    <script src="/scripts/medicine/autocomplete.js"></script>
    <script src="/scripts/common/common.js"></script>
    <script src="/scripts/medicine/deletemedicine.js"></script>
</body>

</html>